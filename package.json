{
  "license": "MIT",
  "scripts": {
    "archive": "git archive HEAD --output=goodbye-rfc-2822-date-time.tar.gz",
    "build": "node build/locale.js && parcel build src/main.ts",
    "clean": "git clean -d --interactive -x",
    "fix": "run-p --print-label fix:*",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write",
    "lint": "run-p --print-label lint:*",
    "lint:eslint": "eslint --ext .ts .",
    "lint:prettier": "prettier --ignore-unknown --check '**/*.{js,jsx,ts,tsx,json,html,css,less,sass,scss,yml,yaml}'",
    "lint:tsc": "tsc --noEmit",
    "lint:web-ext": "web-ext lint",
    "package": "yarn build --no-source-maps && web-ext build && yarn archive",
    "start": "web-ext run",
    "watch": "parcel watch src/main.ts"
  },
  "browserslist": [
    "last 2 Chrome version",
    "Firefox ESR"
  ],
  "devDependencies": {
    "@types/node": "^20.4.7",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.9.3",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6",
    "web-ext": "^7.6.2"
  },
  "dependencies": {
    "dayjs": "^1.11.9"
  }
}
