{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "incremental": true,
    "removeComments": false,

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "inlineSourceMap": true,
    "esModuleInterop": true
  }
}
